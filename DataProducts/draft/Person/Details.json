{
  "openapi": "3.0.2",
  "info": {
    "title": "Person details",
    "description": "Person details",
    "version": "1.0.0"
  },
  "paths": {
    "/draft/Person/Details": {
      "post": {
        "summary": "Person details",
        "description": "Person details",
        "operationId": "request_draft_Person_Details",
        "parameters": [
          {
            "description": "Optional consent token",
            "required": false,
            "schema": {
              "title": "X-Consent-Token",
              "type": "string",
              "description": "Optional consent token"
            },
            "name": "x-consent-token",
            "in": "header"
          },
          {
            "description": "The login token. Value should be \"Bearer [token]\"",
            "required": true,
            "schema": {
              "title": "Authorization",
              "type": "string",
              "description": "The login token. Value should be \"Bearer [token]\""
            },
            "name": "authorization",
            "in": "header"
          },
          {
            "description": "The bare domain of the system that provided the token.",
            "required": false,
            "schema": {
              "title": "X-Authorization-Provider",
              "type": "string",
              "description": "The bare domain of the system that provided the token."
            },
            "name": "x-authorization-provider",
            "in": "header"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PersonDetailsRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PersonDetailsResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConsentRequired"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceNotFound"
                }
              }
            }
          },
          "502": {
            "description": "Bad Gateway",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor502"
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceUnavailable"
                }
              }
            }
          },
          "504": {
            "description": "Gateway Timeout",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceTimeout"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AuthorizationRequired": {
        "title": "AuthorizationRequired",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Authorization is required to access this data source"
          }
        }
      },
      "AuthorizationRequiredForUnpublished": {
        "title": "AuthorizationRequiredForUnpublished",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Unpublished data sources require preview token"
          }
        }
      },
      "ConsentRequired": {
        "title": "ConsentRequired",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Consent is required to access this data source"
          }
        }
      },
      "DataSourceError": {
        "title": "DataSourceError",
        "required": ["status", "error"],
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Data source returned an error"
          },
          "status": {
            "title": "Status code",
            "minimum": 400.0,
            "type": "integer",
            "description": "Status code from the data source"
          },
          "error": {
            "title": "Original error",
            "description": "Raw error from the data source"
          }
        }
      },
      "DataSourceNotFound": {
        "title": "DataSourceNotFound",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Requested data source is not found"
          }
        }
      },
      "DataSourceTimeout": {
        "title": "DataSourceTimeout",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Timeout reached while communicating with the data source"
          }
        }
      },
      "DataSourceUnavailable": {
        "title": "DataSourceUnavailable",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Error while communicating with the data source"
          }
        }
      },
      "DoesNotConformToDefinition": {
        "title": "DoesNotConformToDefinition",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Response from the data source does not conform to definition"
          }
        }
      },
      "HTTPValidationError": {
        "title": "HTTPValidationError",
        "type": "object",
        "properties": {
          "detail": {
            "title": "Detail",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "PersonDetailsRequest": {
        "title": "PersonDetailsRequest",
        "type": "object",
        "properties": {}
      },
      "PersonDetailsResponse": {
        "title": "PersonDetailsResponse",
        "required": ["name", "address"],
        "type": "object",
        "properties": {
          "name": {
            "title": "Full name",
            "type": "string",
            "description": "Person's name and surname",
            "example": "Joshua Gray"
          },
          "address": {
            "title": "Address",
            "type": "string",
            "description": "Person's home address",
            "example": "6 Raymond river\nRileybury\nCR3 6XA"
          }
        }
      },
      "ResponseFor401": {
        "title": "ResponseFor401",
        "anyOf": [
          {
            "$ref": "#/components/schemas/AuthorizationRequired"
          },
          {
            "$ref": "#/components/schemas/AuthorizationRequiredForUnpublished"
          }
        ]
      },
      "ResponseFor502": {
        "title": "ResponseFor502",
        "anyOf": [
          {
            "$ref": "#/components/schemas/DoesNotConformToDefinition"
          },
          {
            "$ref": "#/components/schemas/DataSourceError"
          }
        ]
      },
      "ValidationError": {
        "title": "ValidationError",
        "required": ["loc", "msg", "type"],
        "type": "object",
        "properties": {
          "loc": {
            "title": "Location",
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          },
          "msg": {
            "title": "Message",
            "type": "string"
          },
          "type": {
            "title": "Error Type",
            "type": "string"
          }
        }
      }
    }
  }
}
