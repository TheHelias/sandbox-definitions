{
  "openapi": "3.0.2",
  "info": {
    "title": "Basic Country Info",
    "description": "Data Product for basic country info",
    "version": "1.0.0"
  },
  "paths": {
    "/test/ioxio-dataspace-guides/Country/BasicInfo": {
      "post": {
        "summary": "Basic Country Info",
        "description": "Information about the country",
        "operationId": "request_test_ioxio_dataspace_guides_Country_BasicInfo",
        "parameters": [
          {
            "description": "Optional consent token",
            "required": false,
            "schema": {
              "title": "X-Consent-Token",
              "type": "string",
              "description": "Optional consent token"
            },
            "name": "x-consent-token",
            "in": "header"
          },
          {
            "description": "The login token. Value should be \"Bearer [token]\"",
            "required": false,
            "schema": {
              "title": "Authorization",
              "type": "string",
              "description": "The login token. Value should be \"Bearer [token]\""
            },
            "name": "authorization",
            "in": "header"
          },
          {
            "description": "The bare domain of the system that provided the token.",
            "required": false,
            "schema": {
              "title": "X-Authorization-Provider",
              "type": "string",
              "description": "The bare domain of the system that provided the token."
            },
            "name": "x-authorization-provider",
            "in": "header"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicCountryInfoRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BasicCountryInfoResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConsentRequired"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceNotFound"
                }
              }
            }
          },
          "502": {
            "description": "Bad Gateway",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor502"
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceUnavailable"
                }
              }
            }
          },
          "504": {
            "description": "Gateway Timeout",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceTimeout"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AuthorizationRequired": {
        "title": "AuthorizationRequired",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Authorization is required to access this data source"
          }
        }
      },
      "AuthorizationRequiredForUnpublished": {
        "title": "AuthorizationRequiredForUnpublished",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Unpublished data sources require preview token"
          }
        }
      },
      "BasicCountryInfoRequest": {
        "title": "BasicCountryInfoRequest",
        "required": ["code"],
        "type": "object",
        "properties": {
          "code": {
            "title": "Code",
            "maxLength": 2,
            "minLength": 2,
            "type": "string",
            "description": "ISO 3166-1 alpha-2 code for the country",
            "example": "FI"
          }
        }
      },
      "BasicCountryInfoResponse": {
        "title": "BasicCountryInfoResponse",
        "required": ["code", "name", "area", "languages"],
        "type": "object",
        "properties": {
          "code": {
            "title": "Code",
            "maxLength": 2,
            "minLength": 2,
            "type": "string",
            "description": "ISO 3166-1 alpha-2 code for the country",
            "example": "FI"
          },
          "name": {
            "title": "Name",
            "type": "string",
            "description": "The name of the country",
            "example": "Finland"
          },
          "area": {
            "title": "Area",
            "type": "number",
            "description": "The area of the country in km^2",
            "example": 338455
          },
          "languages": {
            "title": "Official languages",
            "type": "array",
            "items": {
              "maxLength": 2,
              "minLength": 2,
              "type": "string"
            },
            "description": "ISO 639-1 language codes for the official languages",
            "example": ["fi", "sv"]
          },
          "capital": {
            "title": "Capital",
            "allOf": [
              {
                "$ref": "#/components/schemas/Capital"
              }
            ],
            "description": "The capital of the country, legislative if multiple"
          }
        }
      },
      "Capital": {
        "title": "Capital",
        "required": ["name", "lat", "lon"],
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "description": "The name of the capital of the Country",
            "example": "Helsinki"
          },
          "lat": {
            "title": "Latitude",
            "maximum": 90.0,
            "minimum": -90.0,
            "type": "number",
            "description": "The latitude coordinate of the Capital",
            "example": 60.170833
          },
          "lon": {
            "title": "Longitude",
            "maximum": 180.0,
            "minimum": -180.0,
            "type": "number",
            "description": "The longitude coordinate of the Capital",
            "example": 24.9375
          }
        }
      },
      "ConsentRequired": {
        "title": "ConsentRequired",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Consent is required to access this data source"
          }
        }
      },
      "DataSourceError": {
        "title": "DataSourceError",
        "required": ["status", "error"],
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Data source returned an error"
          },
          "status": {
            "title": "Status code",
            "minimum": 400.0,
            "type": "integer",
            "description": "Status code from the data source"
          },
          "error": {
            "title": "Original error",
            "description": "Raw error from the data source"
          }
        }
      },
      "DataSourceNotFound": {
        "title": "DataSourceNotFound",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Requested data source is not found"
          }
        }
      },
      "DataSourceTimeout": {
        "title": "DataSourceTimeout",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Timeout reached while communicating with the data source"
          }
        }
      },
      "DataSourceUnavailable": {
        "title": "DataSourceUnavailable",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Error while communicating with the data source"
          }
        }
      },
      "DoesNotConformToDefinition": {
        "title": "DoesNotConformToDefinition",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Response from the data source does not conform to definition"
          }
        }
      },
      "HTTPValidationError": {
        "title": "HTTPValidationError",
        "type": "object",
        "properties": {
          "detail": {
            "title": "Detail",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "ResponseFor401": {
        "title": "ResponseFor401",
        "anyOf": [
          {
            "$ref": "#/components/schemas/AuthorizationRequired"
          },
          {
            "$ref": "#/components/schemas/AuthorizationRequiredForUnpublished"
          }
        ]
      },
      "ResponseFor502": {
        "title": "ResponseFor502",
        "anyOf": [
          {
            "$ref": "#/components/schemas/DoesNotConformToDefinition"
          },
          {
            "$ref": "#/components/schemas/DataSourceError"
          }
        ]
      },
      "ValidationError": {
        "title": "ValidationError",
        "required": ["loc", "msg", "type"],
        "type": "object",
        "properties": {
          "loc": {
            "title": "Location",
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          },
          "msg": {
            "title": "Message",
            "type": "string"
          },
          "type": {
            "title": "Error Type",
            "type": "string"
          }
        }
      }
    }
  }
}
