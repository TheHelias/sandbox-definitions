{
  "openapi": "3.0.2",
  "info": {
    "title": "BLE Beacons",
    "description": "Data Product for indoor location based on BLE beacons",
    "version": "1.0.0"
  },
  "paths": {
    "/test/Indoor/BLEBeacons": {
      "post": {
        "summary": "BLE Beacons",
        "description": "Indoor location based on BLE beacons",
        "operationId": "request_test_Indoor_BLEBeacons",
        "parameters": [
          {
            "description": "Optional consent token",
            "required": false,
            "schema": {
              "title": "X-Consent-Token",
              "type": "string",
              "description": "Optional consent token"
            },
            "name": "x-consent-token",
            "in": "header"
          },
          {
            "description": "The login token. Value should be \"Bearer [token]\"",
            "required": false,
            "schema": {
              "title": "Authorization",
              "type": "string",
              "description": "The login token. Value should be \"Bearer [token]\""
            },
            "name": "authorization",
            "in": "header"
          },
          {
            "description": "The bare domain of the system that provided the token.",
            "required": false,
            "schema": {
              "title": "X-Authorization-Provider",
              "type": "string",
              "description": "The bare domain of the system that provided the token."
            },
            "name": "x-authorization-provider",
            "in": "header"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BLEBeaconsRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BLEBeaconsResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConsentRequired"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceNotFound"
                }
              }
            }
          },
          "502": {
            "description": "Bad Gateway",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor502"
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceUnavailable"
                }
              }
            }
          },
          "504": {
            "description": "Gateway Timeout",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceTimeout"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AuthorizationRequired": {
        "title": "AuthorizationRequired",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Authorization is required to access this data source"
          }
        }
      },
      "AuthorizationRequiredForUnpublished": {
        "title": "AuthorizationRequiredForUnpublished",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Unpublished data sources require preview token"
          }
        }
      },
      "BLEBeaconsRequest": {
        "title": "BLEBeaconsRequest",
        "required": ["beacons"],
        "type": "object",
        "properties": {
          "beacons": {
            "title": "Beacons",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Beacon"
            }
          }
        }
      },
      "BLEBeaconsResponse": {
        "title": "BLEBeaconsResponse",
        "required": ["locationId", "locationName"],
        "type": "object",
        "properties": {
          "locationId": {
            "title": "Location ID",
            "type": "string",
            "description": "Location ID",
            "example": "849cc493-efb7-483f-b634-7a44849270f9"
          },
          "locationName": {
            "title": "Location name",
            "type": "string",
            "description": "Location name",
            "example": "Deck #3"
          }
        }
      },
      "Beacon": {
        "title": "Beacon",
        "required": ["beaconId", "rssi"],
        "type": "object",
        "properties": {
          "beaconId": {
            "title": "Beacon ID",
            "type": "string",
            "description": "Beacon ID",
            "example": "0d9b38d3-f8a0-4efe-ad62-f781fea62b86"
          },
          "rssi": {
            "title": "RSSI",
            "type": "number",
            "description": "Received Signal Strength Indication, in dBm",
            "example": -55
          }
        }
      },
      "ConsentRequired": {
        "title": "ConsentRequired",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Consent is required to access this data source"
          }
        }
      },
      "DataSourceError": {
        "title": "DataSourceError",
        "required": ["status", "error"],
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Data source returned an error"
          },
          "status": {
            "title": "Status code",
            "minimum": 400.0,
            "type": "integer",
            "description": "Status code from the data source"
          },
          "error": {
            "title": "Original error",
            "description": "Raw error from the data source"
          }
        }
      },
      "DataSourceNotFound": {
        "title": "DataSourceNotFound",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Requested data source is not found"
          }
        }
      },
      "DataSourceTimeout": {
        "title": "DataSourceTimeout",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Timeout reached while communicating with the data source"
          }
        }
      },
      "DataSourceUnavailable": {
        "title": "DataSourceUnavailable",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Error while communicating with the data source"
          }
        }
      },
      "DoesNotConformToDefinition": {
        "title": "DoesNotConformToDefinition",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Response from the data source does not conform to definition"
          }
        }
      },
      "HTTPValidationError": {
        "title": "HTTPValidationError",
        "type": "object",
        "properties": {
          "detail": {
            "title": "Detail",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "ResponseFor401": {
        "title": "ResponseFor401",
        "anyOf": [
          {
            "$ref": "#/components/schemas/AuthorizationRequired"
          },
          {
            "$ref": "#/components/schemas/AuthorizationRequiredForUnpublished"
          }
        ]
      },
      "ResponseFor502": {
        "title": "ResponseFor502",
        "anyOf": [
          {
            "$ref": "#/components/schemas/DoesNotConformToDefinition"
          },
          {
            "$ref": "#/components/schemas/DataSourceError"
          }
        ]
      },
      "ValidationError": {
        "title": "ValidationError",
        "required": ["loc", "msg", "type"],
        "type": "object",
        "properties": {
          "loc": {
            "title": "Location",
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          },
          "msg": {
            "title": "Message",
            "type": "string"
          },
          "type": {
            "title": "Error Type",
            "type": "string"
          }
        }
      }
    }
  }
}
